<Window x:Class="PLWPF.ContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
   Title="contract" Height="600" Width="750" >
    <Window.Background>
        <ImageBrush ImageSource="images/tog.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="welcome" Text="Welcome To The contract Domain" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"   HorizontalAlignment="Center"  FontSize="20"/>
        <StackPanel Grid.Row="1"   >
            <Button x:Name="addButton" Content="Add" Margin="5" />
            <Button x:Name="removeButton" Content="Remove" Margin="5"/>
            <Button x:Name="updateButton" Content="Update" Margin="5"/>
        </StackPanel>

        <Frame x:Name="mainFrame" Grid.Row="1" Grid.Column="1"  NavigationUIVisibility="Hidden" >
            
        </Frame>

    </Grid>
</Window>
